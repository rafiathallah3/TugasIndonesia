{% extends "base.jinja" %}
{% block judul %}Masuk akun{% endblock%}
{% block kontent %}
<div style="margin-top: 150px;">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-12 mx-auto">
                <div class="card pt-4">
                    <div class="card-body">
                        <div class="text-center mb-5">
                            <img src="https://belajar.e-smanpul.com/img/icon.png" alt="iconsmanpul" style="width: 100px;">
                            <h3>Masuk akun E-learning</h3>
                        </div>
                        {% with messages = get_flashed_messages() %}
                            {% if messages %}
                            <h5 class="text-center" style="color: red;">{{ msg }}</h5>
                            {% endif %}
                        {% endwith %}
                        <form method="post" enctype="multipart/form-data" action="">
                            {{ form.hidden_tag() }}
                            <div class="form-group position-relative has-icon-left">
                                <label for="username">Username</label>
                                <div class="position-relative">
                                    {{ form.username }}
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left">
                                <div class="clearfix">
                                    <label for="password">Password</label>

                                </div>
                                <div class="position-relative">
                                    {{ form.password }}
                                </div>
                            </div>
                            <div class="form-check clearfix my-4">
                                <div class="checkbox float-left">
                                    <input type="checkbox" name="remember_me" id="remember_me" class="form-check-input">
                                    <label for="checkbox1">Ingat Saya</label>
                                </div>

                            </div>
                            <div class="clearfix">
                                {{ form.submit }}
                                <a href="{{ url_for('register') }}" class="btn btn-primary float-right btn-block">Buat akun!</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}